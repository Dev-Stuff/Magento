<?xml version="1.0" ?>
	<config>
		<modules>
			<Magentostudy_News>
				<version>1.0.0.</version>
			</Magentostudy_News>
		</modules>

		<global>

			<!-- start models -->
			<models>
				<magentostudy_news>
					<class>Magentostudy_News_Model</class>
					<resourceModel>news_resource</resourceModel>
				</magentostudy_news>
				<news_resource>
					<class>Magentostudy_News_Resource</class>
					<entities>
						<news>
							<table>magentostudy_news</table>
						</news>
					</entities>
				</news_resource>
			</models>
			<!-- end models -->

			<!-- start resources -->
			<resources>
				<magentostudy_news_setup>
					<setup>
						<module>Magentostudy_News</module>
						<class>Magentostudy_News_Resource_Setup</class>
					</setup>
				</magentostudy_news_setup>
			</resources>
			<!-- end resources -->

			<!-- start definire block -->
			<blocks>
				<magentostudy_news>
					<class>Magentostudy_News_Block</class>
				</magentostudy_news>
			</blocks>
			<!-- sfarsit definire block -->


		</global>

		<frontend>
			<routers>
				<magentostudy_news>
					<use>standard</use>
					<args>
						<module>Magentostudy_News</module>
						<frontName>news</frontName>
					</args>
				</magentostudy_news>
			</routers>
			<!-- start definire layout custom -->
			<layout>
				<updates>
					<magentostudy_news>
						<file>magentostudy_news.xml</file>
					</magentostudy_news>
				</updates>
			</layout>
			<!-- end definire layout custom -->
		</frontend>

	</config>